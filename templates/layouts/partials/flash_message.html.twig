<div>
	{% for type,messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{type}} alert-dismissible fade show w-100 text-center mt-3 mb-5" role="alert">
				<strong>
					{{ message }}
					<i class="fas fa-smile-wink text-warning"></i>
				</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}
	{% endfor %}
</div>
